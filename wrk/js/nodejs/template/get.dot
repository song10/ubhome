T={{=it.name}}
build=yes
if [ -d $T/ ]; then
  cd $T
  git reset --hard
  x=`git pul`
  expr "$x" : "Current.*up to date" > /dev/null && \
    build=no
else
  {{=it.clone}}
  cd $T/
fi

