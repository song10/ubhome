R=$(readlink -m $(dirname $0)/..)
cd $R

perl -e "exit 1 unless '$*'=~m/ ?init ?/" && \
  sudo apt-get install -y libssl-dev libltdl-dev

T=node
if [ -d $T/ ]; then
  cd $T
  git reset --hard
  git pul
else
  git clone git://github.com/joyent/node.git
  cd $T/
fi

./configure --prefix=$HOME/opt
make
make install
